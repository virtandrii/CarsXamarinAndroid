<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:padding="16dp">
    <TextView
		android:text="Car Details"
		android:layout_height="60dp"
		android:layout_width="match_parent"
		android:layout_gravity="center"
		android:gravity="center"
		android:textSize="28sp"
		android:textStyle="bold"
	/>


	<ImageView
		android:layout_width="150dp"
        android:layout_height="250dp"
		android:layout_gravity="center"
        android:id="@+id/carProfileImageEdit"
        android:src="@drawable/ic_search"
        android:contentDescription="description" 
        />

   <!-- <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:contentDescription="description" /> -->
	
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:layout_marginLeft="32dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carNameLabel"
			android:text="Name: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carNameDetail"
			android:text="Bmw x5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carNameLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carCompanyNameLabel"
			android:text="Company Name: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carCompanyNameDetail"
			android:text="Bmw"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carCompanyNameLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carPriceLabel"
			android:text="Price: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carPriceDetail"
			android:text="11100 USD"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carPriceLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carColorLabel"
			android:text="Color: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carColorDetail"
			android:text="Black"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carColorLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carEngineTypeLabel"
			android:text="Engine Type: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carEngineTypeDetail"
			android:text="Petrol"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carEngineTypeLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carEngineCapacityLabel"
			android:text="Engine Capacity: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carEngineCapacityDetail"
			android:text="2 L"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carEngineCapacityLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layout_marginLeft="32dp"
		android:layout_marginTop="8dp"
		android:orientation="horizontal">
		<TextView
			android:id="@+id/carPublishYearLabel"
			android:text="Publish Year: "
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
		<TextView
			android:id="@+id/carPublishYearDetail"
			android:text="01/01/2000"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textAlignment="viewStart"
			android:layout_toRightOf="@+id/carPublishYearLabel"
			android:textSize="18sp"
			android:textStyle="bold"
		/>
	</RelativeLayout>
</LinearLayout>
