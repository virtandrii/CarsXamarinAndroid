<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
	android:paddingTop="4dp"
    android:paddingBottom="4dp"
	android:paddingLeft="16dp"
	android:paddingRight="16dp"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:contentPadding="4dp"
    app:cardElevation="4dp"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/carProfileImage"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_android_phone"
            android:contentDescription="description" 
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/carProfileImage"
            android:orientation="vertical"
            android:layout_marginLeft="16dp">

            <TextView
                android:id="@+id/carNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="Name"
            />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/carEngineTypeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Engine Type, "
                    android:layout_below="@id/carNameText"
 
            />

                <TextView
                    android:id="@+id/carEngineCapacityText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Engine Capacity"
                    android:layout_marginLeft="96dp"
                    android:layout_below="@id/carNameText"
            />
            </RelativeLayout>

            <TextView
                    android:id="@+id/carColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Color"
                    android:layout_below="@id/carNameText"
            />

            <TextView
                android:id="@+id/carPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:text="Price"
            />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
